
    
    
        <body class = "grid-container">
            <form class = "form" id="registration-form" action="../users/register" method="POST" 
            enctype="application/x-www-form-urlencoded">
                <div class=form-control>
                    <label for="Username" class="username" >Username</label>
                    <input type="text" id="username" placeholder="Type Username" name="username">
                    <small class ="error"> Error </small>
                </div>

                <div class=form-control>
                    <label for="Email" class="email">Email</label>
                    <input type="email" id="email" placeholder="Type Email" name="email">
                    <small class ="error"> Error </small>
                </div>

                <div class=form-control>
                    <label for="password" class="password">Password</label>
                    <input type="password" id="password" placeholder="Type Password" name="password">
                    <small class ="error"> Error </small>
                 
                </div>

                <div class=form-control>
                    <label for="password" class="password1">Confirm Password</label>
                    <input type="password" id="password1" placeholder="Re-Type Password" >
                    <small class ="error"> Error </small>
              
                </div>
        
                <div class=form-controlBox>
                    <label for="age" class="age">Confirm if 13+ Years Old</label>
                    <input type="checkbox" id="age" required>
             
                </div>

                <div class=form-controlBox>
                    <label for="TOS" class="TOS"> <a href=null>TOS and Privacy Rules</a><br/>Yes I agree</label>
                    <input type="checkbox" id="TOS" required>  
                
                </div> 
                <input class="submit" type="submit" value="Submit" id = "btn"/>
                <input class ="clear" type="reset" value = "Clear"/>
                
            </form>
   </body>
    